# =========================
# Telegram Bot Settings
# =========================

# ОБЯЗАТЕЛЬНО — токен бота от BotFather
BOT_TOKEN=your_bot_token_here


# =========================
# Environment
# =========================

# dev | prod
ENV=dev


# =========================
# Logging
# =========================

# DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO


# =========================
# Parsing mode
# =========================

# HTML рекомендуется
PARSE_MODE=HTML


# =========================
# Database
# =========================

# путь до sqlite файла
DB_PATH=bot.db


# =========================
# Admins
# =========================

# список id через запятую
ADMIN_IDS=


# =========================
# Webhook mode
# =========================

# 0 = polling
# 1 = webhook
USE_WEBHOOK=0
